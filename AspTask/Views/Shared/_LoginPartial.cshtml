@using AspTask.Services

<ul class="navbar-nav">
    @if (UserSessionManager.IsUserLoggedIn())
    {
        <li class="nav-item">
            <a class="nav-link text-dark"  title="Manage">Hello @UserSessionManager.GetUsername()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Posts" asp-action="Index" title="Manage">Manage Posts</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post" role="form">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Account/Signup">Signup</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Account/Login">Login</a>
        </li>
    }
</ul>
